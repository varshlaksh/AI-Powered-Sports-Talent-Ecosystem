<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - SportsTalent AI</title>
    <link rel="stylesheet" href="/css/style.css" />
    <!-- CSS ko external rakhna better hai -->
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div class="container">
        <div class="nav-content">
          <a href="/" class="logo">üèÜ SportsTalent AI</a>
          <button class="mobile-menu-btn">‚ò∞</button>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/signup" class="active">Sign Up</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/upload">Upload</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Signup Header -->
    <header class="signup-header">
      <div class="container">
        <h1>Join SportsTalent AI</h1>
        <p>Create your account and start your journey to athletic excellence</p>
      </div>
    </header>

    <!-- Signup Form -->
    <div class="signup-container">
      <div class="signup-card">
        <h2 class="signup-title">Create Account</h2>
        <p class="signup-subtitle">
          Join our community of athletes and coaches
        </p>

        <!-- Express-validator error handling -->
        <% if (typeof errors !== "undefined" && errors.length > 0) { %>
        <div style="color: red; margin-bottom: 1rem">
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
        <% } %>

        <form action="/users/signup" method="POST">
          <div class="form-group">
            <label for="full-name">Full Name</label>
            <input
              type="text"
              id="full-name"
              name="fullName"
              required
              placeholder="Enter your full name"
            />
          </div>

          <div class="form-group">
            <label for="email">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Enter your email"
            />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="8"
              placeholder="Create a password"
            />
            <p class="password-requirements">
              Must be at least 8 characters with a number and symbol
            </p>
          </div>

          <div class="form-group">
            <label for="confirm-password">Confirm Password</label>
            <input
              type="password"
              id="confirm-password"
              name="confirmPassword"
              required
              minlength="8"
              placeholder="Confirm your password"
            />
          </div>

          <div class="form-group">
            <label for="role">I am a</label>
            <select id="role" name="role" required>
              <option value="">Select your role</option>
              <option value="athlete">Athlete</option>
              <option value="coach">Coach</option>
              <option value="scout">Talent Scout</option>
            </select>
          </div>

          <div class="form-group">
            <label for="sport">Primary Sport</label>
            <select id="sport" name="sport" required>
              <option value="">Select your sport</option>
              <option value="basketball">Basketball</option>
              <option value="soccer">Soccer</option>
              <option value="tennis">Tennis</option>
              <option value="track">Track & Field</option>
              <option value="swimming">Swimming</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label>
              <input type="checkbox" name="terms" required />
              I agree to the <a href="#">Terms of Service</a> and
              <a href="#">Privacy Policy</a>
            </label>
          </div>

          <div class="form-group">
            <label>
              <input type="checkbox" name="newsletter" />
              Send me tips and updates to improve my performance
            </label>
          </div>

          <button type="submit" class="btn btn-primary">Create Account</button>
        </form>

        <div class="divider">
          <span class="divider-text">Or sign up with</span>
        </div>

        <div class="login-link">
          Already have an account? <a href="/login">Log in</a>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>SportsTalent AI</h3>
            <p>
              Empowering athletes with cutting-edge AI technology to analyze,
              improve, and showcase their skills.
            </p>
          </div>
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/users/dashboard">Dashboard</a></li>
              <li><a href="/users/upload">Upload</a></li>
              <li><a href="/users/leaderboard">Leaderboard</a></li>
              <li><a href="/users/profile">Profile</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Resources</h4>
            <ul>
              <li><a href="#">Help Center</a></li>
              <li><a href="#">Blog</a></li>
              <li><a href="#">Tutorials</a></li>
              <li><a href="#">FAQ</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Contact Us</h4>
            <ul>
              <li>Email: support@sportstalent.ai</li>
              <li>Phone: (555) 123-4567</li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>
            &copy; 2025 AI-Powered Sports Talent Ecosystem. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
